<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraViewActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-5dp"
        app:srcCompat="@drawable/cookie_image" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-10dp"
        app:srcCompat="@drawable/cookie_name" />


    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="512dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previewView">

    </LinearLayout>

    <ImageButton
        android:id="@+id/changeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/group_40"
        android:text="카메라 변경"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/flashButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/group_39"
        android:text="플래시"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageButton
        android:id="@+id/btn_guide"
        android:layout_width="102dp"
        android:layout_height="55dp"
        android:layout_marginTop="680dp"
        android:background="@android:color/transparent"
        android:layout_gravity="center|top"
        android:text="촬영 가이드"
        app:srcCompat="@drawable/group_28" />

    <ImageButton
        android:id="@+id/captureButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="580dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:text="사진 찍기"
        app:srcCompat="@drawable/camera2" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:text="이전으로"
        app:srcCompat="@drawable/group_32"
        android:layout_marginTop="5dp"/>


</FrameLayout>