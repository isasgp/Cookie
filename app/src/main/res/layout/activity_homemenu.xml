<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeMenuActivity">



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="410dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/main_hello" />

    <LinearLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/main_button_page"
        android:visibility="gone">



        <ImageButton
            android:id="@+id/btn_record"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="기록"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/main_record"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"/>


        <ImageButton
            android:id="@+id/btn_diagnosis"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="진단"
            android:layout_marginBottom="50dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/main_camera"/>

        <ImageButton
            android:id="@+id/btn_community"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:text="커뮤니티"
            android:layout_marginBottom="50dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/main_cummnity" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="설정"
            android:scaleType="fitCenter"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/main_setting"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|center_vertical"
        android:background="#00000000">
    </LinearLayout>




    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center|top"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/cookie_bar" />




    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/home_info" />

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="221dp"
        android:layout_height="220dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:text="메뉴 보기"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cookie_open" />

</FrameLayout>